[colors]
# imported
background = ${xrdb:background}
background-alt = ${xrdb:color4}
foreground = ${xrdb:foreground}
foreground-alt = ${xrdb:color7}
primary = ${xrdb:color6}
secondary = ${xrdb:color13}
alert = ${xrdb:color9}


[bar/fake]
;phantom bar (invisible) to create shadow for main bar
monitor = eDP1
monitor-fallback = HDMI1
monitor-strict = false
width = 100%:-28
height = 40
offset-x = 14
offset-y = 14
radius = 0
bottom = false
background = #00000000
foreground = #00000000
line-size = 0
border-size = 0
modules-center = space
wm-restack = i3
override-redirect = true


[bar/top]
;main bar
monitor = eDP1
monitor-fallback = HDMI1
monitor-strict = false
### positioning ###
width = 100%
height = 40
;offset-x = 20
;offset-y = 20
fixed-center = false
radius = 0
bottom = false

### tray ###
tray-position = right
tray-padding = 0
tray-maxsize = 16
;tray-offset-y = 15
tray-detached = false

### bar colors ###
background = ${colors.background}
foreground = ${colors.foreground}
line-size = 0
line-color = #f00

border-size = 14
border-color = #00000000
# puts the bar at bottom of windows
;wm-restack = i3
# allows bar to not be fixed by wm
;override-redirect = true

padding-left = 0
padding-right = 2
module-margin-left = 0
module-margin-right = 2
cursor-click = pointer
cursor-scroll = ns-resize

### fonts ###
dpi = 135
font-0 = NotoSans-Regular:size=8;2
font-1 = FontAwesome:size=9;3
font-2 = Weather Icons:size=9;3

### modules ###
modules-left = workspace
modules-center = mopidy mediaplayer
modules-right = weather-full battery wifi vpn updates date time language volume


[module/language]
;shows input language selected
type = internal/xkeyboard
blacklist-0 = num lock
format-prefix = "ï„œ "
format-prefix-underline = ${colors.secondary}
format-prefix-foreground = ${colors.primary}
label-layout = %layout%
label-layout-underline = ${colors.secondary}
label-indicator-padding = 2
label-indicator-margin = 1
label-indicator-background = ${colors.secondary}
label-indicator-underline = ${colors.secondary}


[module/workspace]
;shows workspaces and highlights selected etc
type = internal/i3
format = <label-state> <label-mode>
index-sort = false
strip-wsnumbers = true
;fuzzy-match = true
label-mode-padding = 2
;label-mode-foreground = #000
;label-mode-background = ${colors.primary}

label-focused = %name%
label-focused-background = ${colors.primary}
label-focused-underline = ${colors.primary}
label-focused-padding = 2

label-unfocused = %name%
label-unfocused-padding = 2

; visible = Active workspace on unfocused monitor
label-visible = %name%
label-visible-background = ${colors.background-alt}
label-visible-underline = ${colors.primary}
label-visible-padding = 2

label-urgent = %name%
label-urgent-background = ${colors.alert}
label-urgent-padding = 2

; Separator in between workspaces
;label-separator = |
;label-separator-padding = 2
;label-separator-foreground = #ffb52a

[module/backlight]
;shows backlight brightness and allows control
type = internal/xbacklight
format = <label> <bar>
label = ï†…
bar-width = 10
