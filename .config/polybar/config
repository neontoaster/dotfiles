[module/ip]
;shows current public ip (ipv4)
type = custom/script
format = "<label> "
format-prefix = "ï‰« "
format-prefix-foreground = ${colors.primary}
exec = echo "$(curl --limit-rate 1k -4s ifconfig.co)" || echo ""
interval = 2


[module/iface]
;shows current local ip (ipv4)
